@model IEnumerable<FURNITURE.Models.AboutUsZ>

@{
    ViewData["Title"] = "Index";
    Layout = "Admin_Dashboard_Layout";

}



<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Paragraph1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Paragraph2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Paragraph3)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                 <img src=@Url.Content("~/Images/" + item.Image)
                     asp-append-version="true" style="border-radius:20%;" width="100" height="100" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Paragraph1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Paragraph2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Paragraph3)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-dark">Edit</a> 
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary mt-3">Details</a> 
            </td>
        </tr>
}
    </tbody>
</table>
