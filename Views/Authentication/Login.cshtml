@model FURNITURE.Models.LoginZ

@{
    Layout = null;
}




<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="~/LoginAssets/https://fonts.googleapis.com/css?family=Roboto:300,400&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/LoginAssets/fonts/icomoon/style.css">

    <link rel="stylesheet" href="~/LoginAssets/css/owl.carousel.min.css">

    <!-- fevicon -->
    <link rel="icon" type="image/x-icon" href="~/DashBoardAssets/img/favicon/favicon.png">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/LoginAssets/css/bootstrap.min.css">

    <!-- Style -->
    <link rel="stylesheet" href="~/LoginAssets/css/style.css">

    <title>Login </title>
</head>
<body>


    <div class="d-md-flex half">
        <div class="bg" style="background-image: url('/LoginAssets/images/bg_1.jpg');"></div>
        <div class="contents">

            <div class="container">
                <div class="row align-items-center justify-content-center">
                    <div class="col-md-12">
                        <div class="form-block mx-auto">
                            <div class="text-center mb-5">
                                <h3 class="text-uppercase" style="color:coral;">Sign in </h3>
                            </div>
                            <form asp-action ="Login" method="post">
                                <div class="form-group first">
                                    <label asp-for="UserName" class="control-label">User name</label>
                                <input asp-for="UserName" class="form-control" placeholder="your user name" type="text" required />
                                <span asp-validation-for="UserName" class="text-danger"></span>
                                </div>
                              
                                <div class="form-group last mb-3">
                                    <label asp-for="Passwordd" class="control-label">Password</label>
                                    <input asp-for="Passwordd" class="form-control" placeholder="your password" required type="password" />
                                    <span asp-validation-for="Passwordd" class="text-danger" ></span>
                                </div>

                                <div class="d-sm-flex mb-5 align-items-center">
                                    <label class="control control--checkbox mb-3 mb-sm-0" >
                                        <span class="caption">Remember me</span>
                                        <input type="checkbox" checked="checked" />
                                        <div class="control__indicator" style="height: 20px;  width: 20px;"></div>
                                    </label>
                                    <span class="ml-auto"><a href="/Authentication/Register" class="forgot-pass">Don't have an account?</a></span>
                                </div>

                                <input type="submit" value="LogIn" class="btn btn-block py-2 btn-primary">

                                @{
                                    if (ViewBag.NotCorrect == 0)
                                    {
                                        <div style="background-color:rgba(250,0,0,0.4) ;margin-left: 58px;width: 323px;border-radius: 41px;height: 35px;">

                                        <h6 style="margin-top: 36px;color: red;padding-left: 33px; padding-top: 7px;">
                                           <b style="font-family:'Times New Roman', Times, serif" >user name or password is not correct</b>
                                        </h6>
                                      </div>
                                       
                                    }
                                }
                                


                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>


    </div>



    <script src="~/LoginAssets/js/jquery-3.3.1.min.js"></script>
    <script src="~/LoginAssets/js/popper.min.js"></script>
    <script src="~/LoginAssets/js/bootstrap.min.js"></script>
    <script src="~/LoginAssets/js/main.js"></script>
</body>
</html>















