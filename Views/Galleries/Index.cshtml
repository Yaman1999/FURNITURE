@model IEnumerable<FURNITURE.Models.Gallery>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Admin_Dashboard_Layout.cshtml";
}


<p>
    <a asp-action="Create" class="btn btn-orange"><b>Create New</b></a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                 <img src=@Url.Content("~/Images/" + item.Image)
                 asp-append-version="true" style="border-radius:20%;" width="200" height="200" /> </td>
            <td>
                <div style="margin-top: 71px;">

                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-dark">Change</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>

                </div>
                   
            </td>
        </tr>
}
    </tbody>
</table>
