@model IEnumerable<FURNITURE.Models.HomePageZ>

@{
    ViewData["Title"] = "Index";
    Layout = "Admin_Dashboard_Layout";

}


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Logo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Paragraph)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Text1)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                 <img src=@Url.Content("~/Images/" + item.Image)
                     asp-append-version="true" style="border-radius:20%;" width="100" height="100" />
            </td>
                <td>
                    <img src=@Url.Content("~/Images/" + item.Image2)
                     asp-append-version="true" style="border-radius:20%;" width="100" height="100" />
                </td>
            <td>
                <img src=@Url.Content("~/Images/" + item.Logo)
                     asp-append-version="true" style="border-radius:20%;" width="100" height="100" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Paragraph)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Text1)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-dark">Edit</a> 
                <br>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary mt-3">Details</a> 
            </td>
        </tr>
}
    </tbody>
</table>
