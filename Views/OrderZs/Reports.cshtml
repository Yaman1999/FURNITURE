@model Tuple<IEnumerable<FURNITURE.Models.JoinTable3>,IEnumerable<FURNITURE.Models.PaymentZ>>

@{
    ViewData["Title"] = "Reports";
    Layout = "Admin_Dashboard_Layout";

}



<link href="https://cdn.datatables.net/1.11.1/css/jquery.dataTables.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/buttons/2.0.0/css/buttons.dataTables.min.css" rel="stylesheet" />


<div style="  
    background-color: coral;
    padding: 30px;">
    <h2 style="margin-left: 43%;"><b>Orders</b></h2>
</div><br />



<!--========= TABLE STARTS =========-->
<div class="card">
    <div class="table-responsive text-nowrap">
        <table class="table" id="datatable">
            <thead class="table-dark">
                <tr>
                    <th style="color:coral">Full Name</th>
                    <th style="color:coral">Product</th>
                    <th style="color:coral">Categorie</th>
                    <th style="color:coral">Price</th>
                    <th style="color:coral">Order Date</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var item in Model.Item1)
                {
                    if (item.ProductOrder.Status == "1")
                    {
                       <tr>
                            <td><i class="fab fa-lg text-danger me-3"></i> <strong>@item.Order.User.Fullname</strong></td>
                            <td>@item.ProductOrder.Product.Name</td>
                            <td>@item.Product.Category.Name</td>
                            <td><span class="badge bg-label-primary me-1">$@item.ProductOrder.Product.Price</span></td>
                            <td>@item.ProductOrder.Order.Date</td>
                       </tr>
                    }
                   
                }
            </tbody>
            <tfoot>
                <tr>
                   <td>Total Sales</td>
                    <td>
                        <b>$@ViewBag.total</b>
                    </td>
                    

                </tr>
                <tr>
                    <td>Total orders</td>
                    <td>
                        <b>@ViewBag.orders</b>
                    </td>
                </tr>
             
            </tfoot>
        </table>
    </div>
</div>





<div style="
    background-color: coral;
    padding: 30px;">
    <h2 style="margin-left: 43%;"><b>Payments</b></h2>
</div>
<br />





<!--========= SEARCH DATE STARTS =========-->

<div class="row" style="margin:20px 0px 20px 0px">
    <div class="col-9">
        <form asp-action="Reports" method="post">
        <div class="row">

           <div class="col-lg-4">
                <h4>Start Date </h4>  <input class="form-control" type="date" name="StartDate" id="html5-date-input">
           </div>
           <div class="col-lg-4">
                <h4>End Date </h4>   <input class="form-control" type="date" name="EndDate" id="html5-date-input">
                
           </div>
           <div class="col-lg-2">
                <button type="submit" value="Search" class="btn btn-dark" style="margin-top: 28px;">Search</button>
           </div>

        </div>
    </form>
    </div>
</div>

<!--========= SEARCH DATE ENDS =========-->




<!--========= TABLE STARTS =========-->
<div class="card">
    <div class="table-responsive text-nowrap">
        <table class="table" id="table">
            <thead class="table-dark">
                <tr>
                    <th style="color:coral">Full Name</th>
                    <th style="color:coral">Amount</th>
                    <th style="color:coral">Payment Date</th>
                   
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var item in Model.Item2)
                {
                    
                    
                    <tr>
                        <td><i class="fab fa-lg text-danger me-3"></i> <strong>@item.User.Fullname</strong></td>
                        <td>$@item.Amount</td>
                        <td>@item.PayDate</td>
                    </tr>
                    

                }
            </tbody>
            <tfoot>
                  <tr>
                      <td>
                          Total Amount
                      </td>
                      <td>
                        <b> $@ViewBag.TotalAmount</b>
                      </td>
                  </tr> <tr>
                      <td>
                          Profits
                      </td>
                      <td>
                        <b> $@ViewBag.profits</b>
                      </td>
                  </tr>
            </tfoot>
        </table>
    </div>
</div>
























