@model FURNITURE.Models.Testimonial

@{
    ViewData["Title"] = "Edit";
    Layout = "Admin_Dashboard_Layout";

}


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" /> 
            <input type="hidden" asp-for="UserId" value="@Model.UserId" />
            <input type="hidden" asp-for="Message" value="@Model.Message" />
           
            <div class="form-group">
                <label asp-for="Status" class="control-label" style="margin-right:10px;"> Status :</label>
                <select asp-for="Status" style="padding: 6px;">
                    <option value="Accept">Accept</option>
                    <option value="Under Procces">Under Procces</option>
                    <option value="Rejected">Rejected</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

