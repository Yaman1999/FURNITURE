@model IEnumerable<FURNITURE.Models.Testimonial>

@{
    ViewData["Title"] = "Index";
    Layout = "Admin_Dashboard_Layout";

}


<table class="table">
    <thead>
        <tr>
           <th>
               Image
           </th>
           
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Message)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    <img src=@Url.Content("~/Images/" + item.User.Image)
                     asp-append-version="true" style="border-radius:70%;" width="100" height="100" />

                </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Fullname)
            </td>
                 <td>
                    @Html.DisplayFor(modelItem => item.Message)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-dark">Edit Status</a> 
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mt-3">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
