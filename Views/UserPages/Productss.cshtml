@model IEnumerable<FURNITURE.Models.ProductZ>

@{
    ViewData["Title"] = "Productss";
    Layout = "~/Views/Shared/User_DashBoard_Layout.cshtml";
}

<!--=========  PRODUCTS STARTS =========-->
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-6 col-lg-3 mb-3">
            <div class="card" style="width: 18rem;">
                <img class="card-img-top" src=@Url.Content("~/Images/" + item.Image) asp-append-version="true" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">$@item.Price</p>
                    <a asp-controller="UserPages" asp-action="AddToCart" asp-route-id="@item.Id" class="btn btn-primary">Add to cart</a>
                </div>
            </div>
        </div>
    }
</div>
<!--=========  PRODUCTS ENDS =========-->